rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to users management document for login
    match /users/management {
      allow read: if true;  // Allow reading the management document without authentication
    }

    // Admin access logs - only administrators can read/write
    match /adminAccessLogs/{logId} {
      allow read, write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/management).data.users[request.auth.token.email].role == "Admin" ||
         get(/databases/$(database)/documents/users/management).data.users[request.auth.token.email].accessLevel == "admin");
    }

    // User activity logs - all authenticated users can write, only admins can read
    match /userActivityLogs/{logId} {
      allow write: if request.auth != null;
      allow read: if request.auth != null && 
        (get(/databases/$(database)/documents/users/management).data.users[request.auth.token.email].role == "Admin" ||
         get(/databases/$(database)/documents/users/management).data.users[request.auth.token.email].accessLevel == "admin");
    }

    // Allow read/write access to all other documents for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}