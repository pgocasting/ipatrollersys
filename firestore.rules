rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to users management document for login
    match /users/management {
      allow read: if true;  // Allow reading the management document without authentication
    }

    // Allow read/write access to all other documents for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}